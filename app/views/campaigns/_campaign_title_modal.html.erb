<div class="modal fade" id="campaign-title-modal" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title">Title</h4>
      </div>
      <div class="modal-body">
        <%= f.text_field :title, id: "campaign-title-input", class: "form-control", placeholder: t(".title_placeholder") %>
      </div>
        <div class="modal-footer">
          <div class="btn btn-primary" id="update-title-button" data-dismiss="modal"><%= t(".save") %></button>
        </div>
      </div>
    </div>
  </div>
</div>