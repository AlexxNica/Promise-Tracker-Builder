<h3><%= t(".participate_title") %></h3>
<p><%= t(".participate_text") %></p>

<div id="how-to-participate" class="participate">
  <div class="row how-to-steps">
    <div class="col-sm-4">
      <div class="resource">
        <h5><%= t(".step") %> 1:</h5>
        <h4><%= t(".step_1_text") %></h4>
        <i class="icon-mobile-phone"></i>
        <%= link_to t(".download_link"), download_path %>
      </div>
    </div>
    <div class="col-sm-4">
     <div class="resource">
        <h5><%= t(".step") %> 2:</h5>
        <h4><%= t(".step_2_text") %></h4>
        <i class="icon-download-alt"></i>
        <p class="small"><%= t(".step_2_subtext") %>:</p>
        <h2 class="code"><%= format_survey_code(@survey.code) %></h2>
      </div>
    </div>
    <div class="col-sm-4">
      <div class="resource">
        <h5><%= t(".step") %> 3:</h5>
        <h4><%= t(".step_3_text") %></h4>
        <i class="icon-check"></i>
        <p class="small"><%= t(".step_3_subtext") %></p>
      </div>
    </div>
  </div>
</div>