<% if current_user %>
  <%= render partial: "campaigns/progress_bar" %>
<% end %>

<div class="page-container">
  <%= link_to @campaign.title, campaign_path(@campaign), class: "campaign-title" %>
  <% if @campaign.status == "active" && current_user %>
    <span class="glyphicon glyphicon-flag <%= @campaign.status %>"></span> <%= t("campaigns.status.#{@campaign.status}") %>
    <span class="subtle">(<%= format_survey_code(@survey.code) %>)</span>
  <% end %>
</div>