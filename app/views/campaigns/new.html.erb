<div class="modal fade" id="new-campaign-modal" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title"><%= t(".campaign_title") %></h4>
      </div>
      <%= form_for @campaign do |f| %>
      <div class="modal-body">
          <%= f.text_field :title, class: "form-control", placeholder: t(".title_placeholder") %>
      </div>
      <div class="modal-footer">
        <button type="submit" class="btn btn-primary"><%= t(".create_campaign") %></button>
      </div>
      <% end %>
    </div>
  </div>
</div>

<script type="text/javascript">
  $("#new-campaign-modal").modal();
</script>
