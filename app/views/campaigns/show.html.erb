<div class="btn btn-title">
  <%= @campaign.title %>
</div>
<br>
<%= link_to t(".edit_campaign"), edit_campaign_path(@campaign) %>
<br><br>
<div class="row">
  <div class="col-md-6">
    <label><%= t("campaigns.edit.goal") %></label>
    <p><%= @campaign.goal %></p>

    <label><%= t("campaigns.edit.data_collectors") %></label>
    <p><%= @campaign.data_collectors %></p>

    <label><%= t("campaigns.edit.submissions_target") %></label>
    <p><%= @campaign.submissions_target %></p>

    <label><%= t("campaigns.edit.audience") %></label>
    <p><%= @campaign.audience %></p>

  </div>
  <div class="col-md-6">
    <% if @campaign.survey %>
      <%= link_to t(".edit_survey"), survey_path(@campaign.survey), class: "btn btn-info" %>
    <% else %>
      <%= link_to t("campaigns.index.new_survey"), new_survey_path(campaign_id: @campaign.id), class: "btn btn-info" %>
    <% end %>
  </div>
</div>
