<div class="btn btn-title">
  <%= @campaign.title %>
</div>
<br><br>
<div class="row">
  <div class="col-md-7" id="campaign-goals">
    <div class="section-header">
      <h3 class="title inline"><%= t(".campaign_goals") %></h3>
      <%= link_to t(".edit_goals"), edit_campaign_path(@campaign), class: "btn btn-info right" %>
    </div>

    <label><%= t("campaigns.edit.goal") %></label>
    <p><%= @campaign.goal %></p>

    <label><%= t("campaigns.edit.data_collectors") %></label>
    <p><%= @campaign.data_collectors %></p>

    <label><%= t("campaigns.edit.submissions_target") %></label>
    <p><%= @campaign.submissions_target %></p>

    <label><%= t("campaigns.edit.audience") %></label>
    <p><%= @campaign.audience %></p>
  </div>

  <div class="col-md-5" id="campaign-survey">
    <div class="section-header">
      <h3 class="title inline"><%= t(".campaign_survey") %></h3>
      <% if @survey %>
      <%= link_to t(".edit_survey"), survey_path(@survey), class: "btn btn-info right" %>
      <% end %>
    </div>
    <% if @survey %>
    <%= render partial: "surveys/survey_body", locals: {survey: @survey} %>
    <br>
    <%= link_to t(".launch_survey"), launch_survey_path(@survey), class: "btn btn-warning form-control" %>
    <% else %>
    <%= link_to t("campaigns.index.new_survey"), new_survey_path(campaign_id: @campaign.id), class: "btn btn-info" %>
    <% end %>
  </div>
</div>
