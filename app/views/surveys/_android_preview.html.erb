<div class="center">
  <div class="btn btn-info arrow" data-direction="left">
    <span class="glyphicon glyphicon-chevron-left"></span>
  </div>

  <div class="btn btn-info arrow" data-direction="right">
    <span class="glyphicon glyphicon-chevron-right"></span>
  </div>
</div>

<script type="text/javascript">
  $(".arrow").on("click", PT.nextInput);
</script>