<div id="header">
  <div class="container">
    <h3 class="inline no-pad title"><%= t("surveys.android_preview.preview_title") %> <%= @survey.campaign.title %></h3>
    <ul class="user-links">
        <li><span class="btn btn-info close-window"><%= t("surveys.android_preview.close_preview") %></span></li>
    </ul>
  </div> 
</div>

<div class="container" id="full-size-preview">
  <%= render 'android_preview' %>
</div>

<script type="text/javascript">
  PT.getSurvey("<%= survey_path(@survey) %>");
  $(".close-window").on("click", function(){
    window.close();
  });
</script>