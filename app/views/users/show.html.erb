<div class="row">
  <div class="col-md-12"> 
    <h1><%= t(".my_surveys") %></h1>
    <%= link_to t(".new_survey"), new_survey_path, class: "btn btn-info right" %>
    <br><br>
  </div>
</div>
<div class="row">
  <div class="col-md-12"> 
    <h4>Active surveys</h4>
    <% if @surveys.length > 0 %>
      <ul class="padded-list">
        <% @surveys.each do |survey| %>
          <% if survey.status == "active" %>
          <%= render partial: 'surveys/list_item', locals: {survey: survey} %>
          <% end %>
        <% end %>
      </ul>
    <% else %>
      <p><%= link_to t(".no_surveys"), new_survey_path %></p>
    <% end %>  
  </div>

  <div class="col-md-12"> 
    <h4>Draft surveys</h4>
    <% if @surveys.length > 0 %>
      <ul class="padded-list">
        <% @surveys.each do |survey| %>
          <% if survey.status == "editing" %>
          <%= render partial: 'surveys/list_item', locals: {survey: survey} %>
          <% end %>
        <% end %>
      </ul>
    <% else %>
      <p><%= link_to t(".no_surveys"), new_survey_path %></p>
    <% end %>  
  </div>

    <div class="col-md-12"> 
    <h4>Closed surveys</h4>
    <% if @surveys.length > 0 %>
      <ul class="padded-list">
        <% @surveys.each do |survey| %>
          <% if survey.status == "closed" %>
          <%= render partial: 'surveys/list_item', locals: {survey: survey} %>
          <% end %>
        <% end %>
      </ul>
    <% else %>
      <p><%= link_to t(".no_surveys"), new_survey_path %></p>
    <% end %>  
  </div>
</div>