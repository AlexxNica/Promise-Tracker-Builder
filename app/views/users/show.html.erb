<div class="row">
  <div class="col-md-12"> 
    <h1><%= t(".my_campaigns") %></h1>
    <%= link_to t(".new_campaign"), new_campaign_path, class: "btn btn-info" %>
    <br><br>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <% if @campaigns.present? %>
    <ul class="padded-list">
      <% @campaigns.each do |campaign| %>
        <%= render partial: 'campaign/list_item', locals: {campaign: campaign} %>
      <% end %>
    </ul>
    <% end %>  
  </div>
</div>